<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <Button
        android:id="@+id/muscleButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_selector"
        android:drawableStart="@drawable/muscle_icon"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:text="Build muscle"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fitButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_button_selector"
        android:drawableStart="@drawable/meditate_icon"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:text="Keeping Fit"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="@+id/muscleButton"
        app:layout_constraintTop_toBottomOf="@+id/muscleButton" />

    <Button
        android:id="@+id/weightButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounded_button_selector"
        android:drawableStart="@drawable/weight_icon"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:text="Weight loss"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="@+id/fitButton"
        app:layout_constraintTop_toBottomOf="@+id/fitButton" />

</androidx.constraintlayout.widget.ConstraintLayout>