<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="50dp"
    android:paddingRight="50dp">

    <Button
        android:id="@+id/newbieButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/rounded_button_selector"
        android:text="Newbie\nJust getting started"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/keepButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_button_selector"
        android:text="Keep-on\n1-2 times a week"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="@+id/newbieButton"
        app:layout_constraintTop_toBottomOf="@+id/newbieButton" />

    <Button
        android:id="@+id/advancedButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rounded_button_selector"
        android:text="Advanced\nMore than 3 times a week"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="@+id/keepButton"
        app:layout_constraintTop_toBottomOf="@+id/keepButton" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/rounded_button_selector"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="@+id/advancedButton"
        app:layout_constraintTop_toBottomOf="@+id/advancedButton" />

</androidx.constraintlayout.widget.ConstraintLayout>