<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/spineButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_selector"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="150dp"
        android:text="Spine"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/handsButton"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/handsButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="150dp"
        android:background="@drawable/rounded_button_selector"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:text="Hands"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/legsButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_selector"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:paddingBottom="5dp"
        android:text="Legs"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="150dp"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/torsoButton"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/torsoButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_selector"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="150dp"
        android:paddingBottom="5dp"
        android:text="Torso"
        android:textAllCaps="false"
        android:textColor="@color/colorText"
        android:textSize="@dimen/button_text_size"
        app:layout_constraintTop_toBottomOf="@+id/spineButton"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/ridingMan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/man" />


</androidx.constraintlayout.widget.ConstraintLayout>